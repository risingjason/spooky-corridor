.main-menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.main-menu-label {
  color: #d16721;
  font-size: 128px;
  text-align: center;
}

.main-menu-button {
  padding: 8px;
  margin: 16px 0;

  min-width: 300px;
  min-height: 100px;

  border-radius: 12px;
  font-size: 32px;

  border-width: 2px;
  border-color: #6b491d;
  border-radius: 16px;

  color: #6b491d;
  background-color: #d49115;
}